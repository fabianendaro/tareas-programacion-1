#include <iostream>
using namespace std;
int suma (int valor1, int valor2);
int resta (int valor1, int valor2);
int producto (int valor1, int valor2);
long double division (int valor1, int valor2);
int modulo (int valor1, int valor2);
int main (){
    double valor1, valor2;
    char operacion= ' ';
    cout<< "Ingrese valor1: ";
    cin >> valor1;
    cout<< "Ingrese valor2: ";
    cin >> valor2;
    cout<< "Ingrese operacion +, -, *, /, %: ";
    cin >> operacion;
    switch (operacion)
    {
     case '+' :
     cout << suma (valor1, valor2);
     break;
     case '-' :
     cout << resta (valor1, valor2);
     break;
     case '*' :
     cout << producto (valor1, valor2);
     break;
     case '/' :
     cout << division (valor1, valor2);
     break;
     case '%' :
     cout << modulo (valor1, valor2);
     break;
     default: 
     cout << "Que haces papi :v";
     break;
    }
    return 0;
}
int suma (int valor1, int valor2){
    int sum;
    sum = valor1 + valor2;
    return sum;
}
int resta (int valor1, int valor2){
    int rest;
    rest = valor1 - valor2;
    return rest;
}
int producto (int valor1, int valor2){
    int product;
    product = valor1 * valor2;
    return product;
}
long double division (int valor1, int valor2){
    long double div;
    if(valor2 !=0){
    div = valor1 / valor2;
    return div;}
    else {
    div = -99999999999;
    return div;
    }
}
int modulo (int valor1, int valor2){
    int mod;
    mod = valor1 %  valor2;
    return mod;
}
